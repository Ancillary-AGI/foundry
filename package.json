{
  "name": "foundry-engine",
  "version": "2.0.0",
  "description": "The world's most advanced TypeScript-first game engine",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && cmake --build build --config Release",
    "dev": "concurrently \"tsc --watch\" \"foundry-dev-server\"",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docs": "typedoc src/typescript/",
    "clean": "rimraf dist build",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "examples": "npm run build && node examples/complete-game-demo/dist/main.js",
    "benchmark": "node scripts/benchmark.js",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "game-engine",
    "typescript",
    "webgl",
    "vulkan",
    "ray-tracing",
    "vr",
    "ar",
    "multiplayer",
    "ai",
    "physics",
    "3d",
    "cross-platform"
  ],
  "author": "Foundry Engine Team <team@foundryengine.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/foundryengine/foundry.git"
  },
  "bugs": {
    "url": "https://github.com/foundryengine/foundry/issues"
  },
  "homepage": "https://foundryengine.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ws": "^8.14.0",
    "msgpack": "^1.0.3",
    "lz4": "^0.6.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typedoc": "^0.25.0"
  },
  "peerDependencies": {
    "cmake": ">=3.20.0",
    "vulkan-sdk": ">=1.3.0"
  },
  "bin": {
    "foundry": "./bin/foundry-cli.js"
  },
  "files": [
    "dist/",
    "include/",
    "src/",
    "examples/",
    "docs/",
    "CMakeLists.txt",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/foundryengine"
  }
}