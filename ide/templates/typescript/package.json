{
  "name": "foundry-typescript-game",
  "version": "1.0.0",
  "description": "A game built with Foundry Engine and TypeScript",
  "main": "dist/main.js",
  "scripts": {
    "build": "foundry build",
    "build:dev": "foundry build --dev",
    "build:prod": "foundry build --prod",
    "start": "foundry run",
    "start:dev": "foundry run --dev",
    "test": "foundry test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "serve": "http-server dist -p 3000",
    "deploy": "foundry deploy"
  },
  "keywords": [
    "game",
    "typescript",
    "foundry",
    "webgl",
    "engine"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "http-server": "^14.1.1",
    "rimraf": "^4.4.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@foundry/engine": "^1.0.0"
  },
  "foundry": {
    "engine": "^1.0.0",
    "typescript": "^4.9.0",
    "targets": {
      "web": {
        "platform": "web",
        "output": "dist/web",
        "minify": true,
        "sourcemap": true
      },
      "desktop": {
        "platform": "desktop",
        "output": "dist/desktop",
        "bundle": true
      },
      "mobile": {
        "platform": "mobile",
        "output": "dist/mobile",
        "optimization": "size"
      }
    },
    "assets": {
      "images": "assets/images/**/*.{png,jpg,jpeg,gif,svg}",
      "sounds": "assets/sounds/**/*.{mp3,wav,ogg}",
      "models": "assets/models/**/*.{obj,fbx,gltf}",
      "shaders": "assets/shaders/**/*.{vert,frag,glsl}",
      "data": "assets/data/**/*.{json,xml,yaml}"
    },
    "build": {
      "prebuild": "npm run type-check",
      "postbuild": "npm run lint",
      "optimization": {
        "level": 2,
        "deadCodeElimination": true,
        "treeShaking": true,
        "minify": true
      },
      "compression": {
        "gzip": true,
        "brotli": true
      }
    },
    "development": {
      "hotReload": true,
      "devServer": {
        "port": 3000,
        "host": "localhost",
        "open": true
      },
      "debug": {
        "enabled": true,
        "breakpoints": true,
        "profiler": true
      }
    },
    "testing": {
      "framework": "jest",
      "coverage": true,
      "setupFiles": ["<rootDir>/test/setup.ts"],
      "testMatch": ["**/__tests__/**/*.ts", "**/*.test.ts"],
      "collectCoverageFrom": [
        "src/**/*.{ts,js}",
        "!src/**/*.d.ts"
      ]
    },
    "deployment": {
      "providers": {
        "github-pages": {
          "repository": "username/repo-name",
          "branch": "gh-pages"
        },
        "netlify": {
          "siteId": "your-site-id"
        },
        "vercel": {
          "projectId": "your-project-id"
        }
      },
      "environments": {
        "staging": {
          "url": "https://staging.yourgame.com",
          "analytics": false
        },
        "production": {
          "url": "https://yourgame.com",
          "analytics": true,
          "cdn": true
        }
      }
    }
  }
}